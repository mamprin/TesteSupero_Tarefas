@model TesteSupero.Models.Tarefa

@{
    ViewData["Title"] = "Alterar";
}

<h2>Alterar Tarefa</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTarefa" />
            <div class="form-group">
                Nome da Tarefa
                <input asp-for="NomeTarefa" class="form-control" />
                <span asp-validation-for="NomeTarefa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox mr-sm-2">
                    <label>
                        <input asp-for="StatusTarefa" class="custom-control-input" /> Tarefa Concluída?
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success btn-sm" />
                <a class="btn btn-default btn-sm" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
