@model TesteSupero.Models.Tarefa

@{
    ViewData["Title"] = "Remover Tarefa";
}

<h2>Excluir Tarefa</h2>
<br />
<h4>Dados da Tarefa</h4>
<br />
<div>
    <dl class="dl-horizontal">
        <dt>
            Nome da Tarefa:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeTarefa)
        </dd>
        <dt>
            Tarefa Concluída:
        </dt>
        <dd>
            @if (Model.StatusTarefa == true)
            {
                <span>Sim</span>
            }
            else
            {
                <span>Não</span>
            }
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdTarefa" />
        <input type="submit" value="Remover" class="btn btn-danger btn-sm" />
        <a asp-action="Index" class="btn btn-default btn-sm">Voltar</a>
    </form>
</div>
